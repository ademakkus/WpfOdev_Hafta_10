<Window x:Class="Wpf_TextBox_Binding_Label.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_TextBox_Binding_Label"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel Margin='25'>
		<Label Target='{Binding ElementName=txtAdi}'>
			
		</Label>
		<TextBox x:Name='txtAdi'></TextBox>
		<Button HorizontalAlignment='Right' Click='Button_Click'>Enter</Button>
	</StackPanel>
</Window>
